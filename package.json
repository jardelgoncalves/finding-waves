{
  "name": "finding-waves-api",
  "version": "1.0.0",
  "description": "Finding Waves is an application to calculate the best surf condition between different beaches",
  "main": "index.js",
  "scripts": {
    "build": "etsc",
    "start": "NODE_ENV=production && node dist/src/index.js",
    "start:dev": "ts-node-dev --transpile-only 'src/index.ts' | pino-pretty -c",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "style:check": "prettier --check './src/**/*.ts' './test/**/*.ts'",
    "test": "npm run test:e2e && npm run test:unit",
    "test:e2e": "jest --projects ./test --runInBand",
    "test:unit": "jest"
  },
  "keywords": [
    "node.js",
    "typescript",
    "api",
    "surf",
    "waves",
    "forecast"
  ],
  "author": "Jardel Gon√ßalves",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^3.0.0",
    "@types/config": "0.0.36",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.7.36",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.0.27",
    "@types/pino": "^6.3.2",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "esbuild-node-tsc": "^1.0.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.2",
    "nock": "^13.0.4",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-node-dev": "^1.0.0-pre.60",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.4",
    "@types/cors": "^2.8.8",
    "@types/express-pino-logger": "^4.0.2",
    "@types/http-status-codes": "^1.2.0",
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-pino-logger": "^5.0.0",
